<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="SMB Team"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="10 people"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:text="GOAL ATTAINMENT"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1">

            <TextView android:layout_width="0dp" android:layout_weight=".3" android:layout_height="match_parent" android:text="te"/>

            <com.newdesigns.experiment.GoalAttainmentView
                xmlns:gav="http://schemas.android.com/apk/res-auto"
                android:id="@+id/goalAttainment"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                gav:goalArcColor="#f3a536"
                gav:innerCircleColor="#dcdcdc"
                gav:goalArcWidth="3dp"
                gav:innerCircleWidth="1dp"
                gav:goalTextHeight="35sp"
                gav:labelTextHeight="15sp"
                gav:labelTextTopMargin="5dp"/>

            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:text="TOTAL SALES"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
</ScrollView>